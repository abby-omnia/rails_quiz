<h1>產品清單</h1>
<h1><%= t ".title" %></h1>
<div id="products">
    <%= link_to "NEW PRODUCT" , new_product_path  if authenticated? %>
    <%= link_to "LOGIN" , new_session_path  unless authenticated? %>
    <% @products.each do |product| %>
        <div>
            <%= link_to product.name, product_path(product.id) %>
        </div>
    <% end %>
    
</div>