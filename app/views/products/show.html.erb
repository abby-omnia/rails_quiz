<p><%= link_to "Back" , products_path %></p>
<section class="product">
    <%= image_tag @product.featured_image , style: "width: 25em; display: block;" if @product.featured_image.attached? %>

    <section class="product-info">
        <% cache @product do %>
            <h1><%= @product.name %></h1>
            <%= @product.description %>
        <% end %>

        <%= render "inventory" , product: @product %>

        <% if authenticated? %>
            <%= link_to "Edit" , edit_product_path(@product) %>
            <%= button_to "Delete" , @product ,method: :delete,  data:{ turbo_confirm: "SURE??"}%>
        <% end %>
    </section>
</section>
